<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="in.public_static.carin.paniar">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ActivityIntro"
            android:theme="@style/Theme.Intro" />
        <activity android:name=".activity.ActivityCompatParent" />
        <activity android:name=".activity.ActivityMain" />
        <activity android:name=".activity.ActivityNumber" />
        <activity android:name=".activity.ActivityOrder" />
        <activity android:name=".activity.ActivityConfirmationList" />
        <activity android:name=".activity.ActivityTiket" />
        <activity
            android:name=".activity.ActivityPay"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".activity.ActivityDigitalReceipt" />
        <activity
            android:name=".activity.ActivityPopUpMain"
            android:theme="@style/Theme.Transparent" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"
            tools:replace="android:value"
            />
        <activity
            android:name=".activity.Activity_Map"
            android:label="Map" />
    </application>

</manifest>