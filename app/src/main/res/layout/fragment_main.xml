<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:adjustViewBounds="false"

            android:src="@drawable/ic_logo" />

        <ImageView
            android:id="@+id/img_info"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            app:srcCompat="@drawable/info_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tab_bar_back"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/home_insurance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/active_tab_back"
            android:gravity="center"
            android:text="بیمه منزل"
            android:textColor="#ffffff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/happening_insurance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="بیمه حوادث"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/job_insurance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:text="بیمه اصناف"
            android:textSize="12dp" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clipToPadding="false"
        android:padding="10dp"
        android:translationZ="2dp" />

</LinearLayout>