<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:minHeight="75dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_white_with_shadow"
        android:elevation="2dp"
        android:minHeight="75dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgBime"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/ic_bime_alborz" />

            <TextView
                android:id="@+id/txtItemPay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:textColor="#6c6c6c" />

            <TextView
                android:id="@+id/txtItemTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="right|center_vertical"
                android:text="بیمه البرز سهامی عام"
                android:textColor="#6c6c6c"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:padding="3dp"
            android:text="مبلغ"
            android:textColor="#6c6c6c" />

        <TextView
            android:id="@+id/txtPriceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:padding="3dp"
            android:text="ریز مبلغ"
            android:textColor="#6c6c6c" />

        <TextView
            android:id="@+id/txtDsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:padding="3dp"
            android:text="توضیحات"
            android:textColor="#6c6c6c" />

        <Button
            android:id="@+id/btnPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ثبت درخواست" />

    </LinearLayout>

</LinearLayout>