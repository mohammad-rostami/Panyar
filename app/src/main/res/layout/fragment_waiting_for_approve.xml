<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.public_static.carin.paniar.fragments.FragmentWaitingForApprove">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:background="#ffffff"
        android:elevation="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:adjustViewBounds="false"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/title_container"
            android:gravity="center"
            android:text="بررسی و کارشناسی"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left">

            <TextView
                android:id="@+id/img_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/desc_back"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="6dp"
                android:text="توضیح ؟"
                android:textColor="#d3d3d3"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

    <com.eschao.android.widget.elasticlistview.ElasticListView
        android:id="@+id/lst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:cacheColorHint="#00000000"
        android:clipToPadding="false"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:padding="4dp"
        android:scrollbars="none" />
</LinearLayout>
